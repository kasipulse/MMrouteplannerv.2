rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /stops/{stopId} {
      allow read, write: if request.auth != null
        && request.resource.data.size() <= get(/databases/$(database)/documents/users/$(request.auth.uid)).data.maxStops;
    }
  }
}
